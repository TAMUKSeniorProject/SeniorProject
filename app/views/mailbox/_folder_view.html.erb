<div class="row">
  <div class="spacer"></div>
  <div class="col-md-12">
    <%= link_to "Compose", new_conversation_path, class: "btn btn-success btn-md" %>
    <div class="spacer"></div>
  </div>

  <div class="col-md-2">
    <div class="panel panel-default">
      <div class="panel-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="col-md-10">
    <div class="panel panel-default">
      <div class="panel-body">
         <% if is_conversation %>
              <%= render 'conversations/form' %>
         <% else %>
             <%= render partial: 'conversations/conversation', collection: messages %>
         <% end %>   
      </div>
    </div>
  </div>

</div>
