<h1>Channels</h1>
<% if has_role?(:admin) %>
<table class = "table">
  <thead>
    <tr>
      <th scope = "col">Channel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @channels.each do |channel| %>
      <tr>
        <td><%= channel.channel %></td>
        <td><%= link_to 'Show', channel, class: "btn btn-outline-secondary"%></td>
        <td><%= link_to 'Edit', edit_channel_path(channel), class: "btn btn-outline-secondary" %></td>
        <td><%= link_to 'Destroy', channel,  class: "btn btn-outline-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% else %>
  <p class="has-text-center">Sorry! You don't have access this page.</p>
<%= link_to 'New Channel', new_channel_path %>
<% end %>
