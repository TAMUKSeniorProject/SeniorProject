<div class="row">
  <div class="spacer"></div>
  <div class="col-10">
    <div class="card-light">
      <div class="card-body">
        <%= render 'mailbox/folders' %>
      </div>
    </div>
  </div>

  <div class="spacer"></div>
  <div class="col-2">
    <%= link_to "Compose", new_conversation_path, class: "btn btn-lg btn-success" %>
  </div>

  <div class="col-10">
    <div class="card">
      <div class="card-body">
        <%= render partial: 'messages' %>
      </div>
        <div class="card-footer">
          <!-- Reply Form -->
          <%= form_for :message, url: reply_conversation_path(conversation) do |f| %>
              <div class="form-group">
                <%= f.text_area :body, placeholder: "Reply Message", rows: 2, class: "form-control" %>
              </div>
              <%= f.submit "Reply", class: 'btn btn-danger pull-right' %>
          <% end %>
          <div class="clearfix"></div>
      </div>
    </div>
  </div>

</div>