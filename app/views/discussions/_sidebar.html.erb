<h2>Categories</h2>
<ul>
    <% @channels.each do |c| %>
    <li><%= link_to c.channel, c %></li>
    <% end %>
</ul>

<br/>
<% if has_role?(:admin) %>
    <%= link_to 'New Category', new_channel_path, class:"btn btn-info" %>
<% end %>



<%= search_form_for @q do |f| %>
    <%= f.label :title_or_content_cont %>
    <%= f.search_field :title_or_content_cont %>
    <%= f.submit %>
<% end %>
