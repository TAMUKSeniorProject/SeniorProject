
<%= simple_form_for(@discussion) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class= "form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', rows: '3' %>
  </div>
  
  <div class= "form-group">
    <%= f.label :channel %>
    <%= f.input_field :channel_id, collection:@channels.map { |c| [c.channel, c.id] }, prompt: "Select channel" %>
  </div>
  
  <p>Want your post to appear on our calendar? Fill in the event date here</p>
  <div class= "form-group">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, include_blank: true %>
  </div>
  
  <%= f.collection_check_boxes(:topic_list, valid_topics, :first, :first) do |b| %>
    <div class="form-check">
      <label class="form-check-label"><%= b.check_box class: 'form-check-input' %> <%= b.value %></label>&nbsp;&nbsp;
    </div>
  <% end %>
  <br/>
  
  <div class="form-actions form-group">
    <%= f.button :submit %>
  </div>
<% end %>
