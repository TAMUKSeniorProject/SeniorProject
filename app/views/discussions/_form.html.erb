<% if !current_user.first_post_approved %>
<div class="card border-info mb-3">
  <div class="card-header text-center">Attention!</div>
  <div class="card-body text-info">
    <h5 class="card-title"></h5>
    <p class="card-text">We noticed this is your first post. Once submitted, you must wait for admin approval for it to display to all users. Afterwards, all subsequent posts
  will be available to the community automatically.</p>
  </div>
</div>
<% end %>

<%= simple_form_for(@discussion) do |f| %>
  <%= f.error_notification %>
  
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  
  <div class= "form-group">
    <%= f.label :content %>
    <%= f.text_area :content, class: 'form-control', rows: '3' %>
  </div>
  
  <div class= "form-group">
    <%= f.label :Category %>
    <%= f.input_field :channel_id, collection:@channels.map { |c| [c.channel, c.id] }, prompt: "Select Category" %>
  </div>
  
  <p>Want your post to appear on our calendar? Fill in the event date here</p>
  <div class= "form-group">
    <%= f.label :start_time %>
    <%= f.datetime_select :start_time, include_blank: true %>
  </div>
  
  <%= f.collection_check_boxes(:topic_list, valid_topics, :first, :first) do |b| %>
    <div class="form-check">
      <label class="form-check-label"><%= b.check_box class: 'form-check-input' %> <%= b.value %></label>&nbsp;&nbsp;
    </div>
  <% end %>
  <br/>
  
  <div class="form-actions form-group">
    <%= f.button :submit %>
  </div>
<% end %>
